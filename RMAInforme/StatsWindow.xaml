<Window x:Class="RMAInforme.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Estadisticas de la búsqueda" Height="766" Width="1366" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid Name="grillita" Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0" Background="LightCyan">
                <lvc:PieChart x:Name="PieChart1" Grid.Column="0" Grid.Row="0" DisableAnimations="True" LegendLocation="Top" FontSize="12" FontWeight="Bold" Hoverable="False" DataTooltip="{x:Null}" Margin="25,25,25,25" FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="aaa" Values="50" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="aaa" Values="50" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                    <lvc:PieChart.SeriesColors>
                        <lvc:ColorsCollection>
                            <Color A="200" R="250" G="178" B="158" />
                            <Color A="200" R="174" G="163" B="201" />
                        </lvc:ColorsCollection>
                    </lvc:PieChart.SeriesColors>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart1Label" FontSize="11" Text="aaa" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" />


            <Grid Grid.Column="1" Grid.Row="0" Background="LightCyan">
                <lvc:PieChart x:Name="PieChart2" Grid.Column="1" Grid.Row="0" DisableAnimations="True" FontWeight="Bold" LegendLocation="Top" FontSize="11" Hoverable="False" DataTooltip="{x:Null}"  Margin="25,25,25,25"  FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="bbb" Values="33" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="bbb" Values="33" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="bbb" Values="33" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                    <lvc:PieChart.SeriesColors>
                        <lvc:ColorsCollection>
                            <Color A="200" R="250" G="178" B="158" />
                            <Color A="200" R="136" G="210" B="242" />
                            <Color A="200" R="174" G="163" B="201" />
                        </lvc:ColorsCollection>
                    </lvc:PieChart.SeriesColors>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart2Label" FontSize="11" Text="bbb" Grid.Row="0" Grid.Column="1" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" />


            <Grid Grid.Column="2" Grid.Row="0" Background="LightCyan">
                <lvc:PieChart x:Name="PieChart3" Grid.Column="0" Grid.Row="1" DisableAnimations="True" LegendLocation="Top" FontSize="12" FontWeight="Bold" Hoverable="False" DataTooltip="{x:Null}"  Margin="25,25,25,25"  FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="ccc" Values="50" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="ccc" Values="50" DataLabels="True" FontFamily="Consolas" Foreground="Black" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                    <lvc:PieChart.SeriesColors>
                        <lvc:ColorsCollection>
                            <Color A="200" R="250" G="178" B="158" />
                            <Color A="200" R="136" G="210" B="242" />
                        </lvc:ColorsCollection>
                    </lvc:PieChart.SeriesColors>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart3Label" FontSize="11" Text="ccc" Grid.Row="0" Grid.Column="2" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" TextWrapping="Wrap" />


            <Grid Grid.Column="0" Grid.Row="1" Background="#FFFFE0FF">
                <lvc:PieChart x:Name="PieChart4" Grid.Column="2" Grid.Row="1" DisableAnimations="True" LegendLocation="Top" FontSize="11" FontWeight="Bold" Hoverable="False" DataTooltip="{x:Null}" Margin="25,25,25,25" FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="ddd" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="ddd" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="ddd" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="ddd" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart4Label" FontSize="11" Text="ddd" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" />


            <Grid Grid.Column="1" Grid.Row="1" Background="#FFFFE0FF">
                <lvc:PieChart x:Name="PieChart5" Grid.Column="2" Grid.Row="0" DisableAnimations="True" LegendLocation="Top" FontSize="11" FontWeight="Bold" Hoverable="False" DataTooltip="{x:Null}" Margin="25,25,25,25" FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="eee" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="eee" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="eee" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="eee" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart5Label" FontSize="11" Text="eee" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" />

            
            <Grid Grid.Column="2" Grid.Row="1" Background="#FFFFE0FF">
                <lvc:PieChart x:Name="PieChart6" Grid.Column="1" Grid.Row="1" DisableAnimations="True" LegendLocation="Top" FontSize="11" FontWeight="Bold" Hoverable="False" DataTooltip="{x:Null}" Margin="25,25,25,25" FontFamily="Consolas">
                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="fff" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="fff" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="fff" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="fff" Values="25" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                </lvc:PieChart>
            </Grid>
            <TextBlock x:Name="Chart6Label" FontSize="11" Text="fff" Grid.Row="1" Grid.Column="2" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="consolas" FontWeight="Bold" />

        </Grid>
        
        <Button Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" Width="36" Click="ButtonSave_Click" Height="36" FontFamily="Consolas">
            <Image Source="/RMAInforme;component/Resources/save.ico" Width="28" Height="28"/>
        </Button>
    
    </Grid>
</Window>
