<Window x:Class="RMAInforme.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMAInforme"
        mc:Ignorable="d"
        Title="Estadisticas de la búsqueda" Height="600" Width="800" MaxHeight="768" MaxWidth="1366" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="LightSteelBlue">
        <Label x:Name="LabelTotalCambios" Content="Cantidad total de cambios : xxxxx" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Consolas" FontWeight="Bold" Margin="10,10,0,0"/>
        <Label x:Name="LabelTotalItemsBusqueda" Content="Items encontrados         : xxxxx" FontFamily="Consolas" FontWeight="Bold" Margin="0,10,10,0" HorizontalAlignment="Right" Height="24" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressTotal" Margin="10,42,10,0" IsTabStop="False" FontFamily="Consolas" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressPeriod" Margin="10,92,10,0" IsTabStop="False" FontFamily="Consolas" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressSimilar" Margin="10,142,10,0" IsTabStop="False" FontFamily="Consolas" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressSame" Margin="10,192,10,0" IsTabStop="False" FontFamily="Consolas" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressMonth" Margin="10,242,10,0" IsTabStop="False" FontFamily="Consolas" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top"/>
        <Label x:Name="LabelPorcentajeSobreTotalCambios" Content="Porcentaje sobre el total: %0" FontFamily="Consolas" FontWeight="Bold" Margin="10,41,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="774" Height="31" VerticalAlignment="Top"/>
        <Label x:Name="LabelPorcentajeSobreRangoFecha" Content="Porcentaje sobre rango: %0" FontFamily="Consolas" FontWeight="Bold" Margin="10,94,0,0" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="774"/>
        <Label x:Name="LabelPorcentajeCategoria" Content="Porcentaje misma categoria: %0" FontFamily="Consolas" FontWeight="Bold" Margin="10,144,0,0" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="774"/>
        <Label x:Name="LabelPorcentajeSobreProducto" Content="Porcentaje mismo producto:%0" FontFamily="Consolas" FontWeight="Bold" Margin="10,194,0,0" VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="774"/>
        <Label x:Name="LabelPorcentajeSobreModelo" Content="Porcentaje mismo modelo:%0" FontFamily="Consolas" FontWeight="Bold" Margin="10,244,0,0" VerticalContentAlignment="Center" RenderTransformOrigin="1.598,-1.5" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="774"/>

    </Grid>
</Window>
