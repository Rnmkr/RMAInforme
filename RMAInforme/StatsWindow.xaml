                    <lvc:PieChart.Series>
                        <lvc:PieSeries Title="aaa" Values="50" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                        <lvc:PieSeries Title="aaa" Values="50" DataLabels="True" Foreground="Black" FontFamily="Consolas" FontSize="16" LabelPoint="{Binding PointLabel}"/>
                    </lvc:PieChart.Series>
                    <lvc:PieChart.SeriesColors>
                        <lvc:ColorsCollection>
                            <Color A="220" R="220" G="75" B="75" />
                            <Color A="200" R="50" G="75" B="75" />
                            <Color A="200" R="75" G="150" B="75" />
                            <Color A="175" R="220" G="220" B="25" />
                        </lvc:ColorsCollection>
                    </lvc:PieChart.SeriesColors>
                </lvc:PieChart>
            </Grid>
            <Grid  Grid.Row="0" Grid.Column="0" Background="#FFFFE0FF">
                <TextBlock x:Name="Chart1Label" Text="aaa" Margin="5" FontWeight="Bold"  TextWrapping="Wrap"/>
            </Grid>

